{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run eval_agent.py with args",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/protoverse/eval_agent.py",
            "console": "integratedTerminal",
            "args": [
                "+robot=g1",
                "+simulator=isaaclab",
                "+checkpoint=results/g1_follow/last.ckpt"
            ],
            "env": {
                "WANDB_DISABLE_SENTRY": "true",
                "WANDB_SILENT": "true",
                "WANDB_DISABLE_CODE": "true"
            }
        },
        {
            "name": "Debug train_agent.py with args",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/protoverse/train_agent.py",
            "console": "integratedTerminal",
            "args": [
                "+exp=path_follower_mlp",
                "+robot=h1",
                "+simulator=isaaclab",
                "+experiment_name=h1_test",
                "+opt=wandb",
                "++num_envs=2",
                "++init_viser=true"
            ],
            "env": {
                "WANDB_DISABLE_SENTRY": "true",
                "WANDB_SILENT": "true",
                "WANDB_DISABLE_CODE": "true"
            }
        }
        {
            "name": "Debug train_agent.py (isaacgym)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/protoverse/train_agent.py",
            "console": "integratedTerminal",
            "args": [
                "+experiment_name=test_gym_debug",
                "+robot=h1",
                "+exp=steering_mlp",
                "+simulator=isaacgym",
                "++env.config.enable_height_termination=true",
                "++headless=false",
                "++num_envs=10"
            ],
            "env": {
                "WANDB_DISABLE_SENTRY": "true",
                "WANDB_SILENT": "true",
                "WANDB_DISABLE_CODE": "true"
            }
        }
    ]
}